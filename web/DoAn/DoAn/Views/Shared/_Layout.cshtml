<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EGA Furniture</title>
    @ViewData["Link"]
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        a{
            text-decoration: none;
            color: black;
        }
        /* Header styles */
        .header {
            background-color: #f8f9fa;
            padding: 15px 20px;
        }

            .header .logo {
                font-size: 24px;
                font-weight: bold;
                max-height: 60px;
            }

            .header .logo img {
                max-height: 50px;
            }
            .header .nav-item {
                margin-right: 20px;
            }

            .header .search-bar {
                display: flex;
                align-items: center;
            }

                .header .search-bar input {
                    border-radius: 5px;
                    margin-right: 10px;
                }

            .header .icons i {
                font-size: 18px;
                margin-left: 15px;
                cursor: pointer;
            }

        /* Footer styles */
        .footer {
            background-color: #333;
            color: #fff;
            padding: 40px 0;
        }

            .footer .footer-logo,
            .footer .footer-support,
            .footer .footer-policy,
            .footer .footer-subscribe {
                margin-bottom: 20px;
            }

            .footer h5 {
                font-weight: bold;
                font-size: 1.1rem;
                margin-bottom: 15px;
            }

            .footer p, .footer a {
                color: #bbb;
                font-size: 0.9rem;
            }

                .footer a:hover {
                    color: #ff6600;
                    text-decoration: none;
                }

            .footer .footer-subscribe input[type="email"] {
                width: 100%;
                padding: 8px;
                border: none;
                border-radius: 4px;
                margin-bottom: 10px;
            }

            .footer .social-icons a {
                color: #bbb;
                font-size: 1.2rem;
                margin-right: 10px;
                transition: color 0.3s;
            }

                .footer .social-icons a:hover {
                    color: #ff6600;
                }

            .footer .payment-methods img {
                width: 40px;
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <!-- Header Section -->
    <header>
        <div class="header d-flex justify-content-between align-items-center">
            <!-- Logo Section -->
            <div class="logo">
                <a href="@Url.Action("index", "Home")"><img src="~/lib/logo.webp" alt="Alternate Text" /></a>
            </div>
            <!-- Navigation Section -->
            <nav class="d-flex align-items-center">
                <ul class="nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="@Url.Action("DanhSach", "SanPham")" id="sanPhamDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Sản phẩm
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="sanPhamDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("DanhSach", "SanPham")">Nội thất</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("DanhSach", "SanPham")">Đồ trang trí</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("DanhSach", "SanPham")">Vật dụng</a></li>
                        </ul>
                    </li>
                    @* <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="phongDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Phòng
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="phongDropdown">
                            <li><a class="dropdown-item" href="#">Phòng khách</a></li>
                            <li><a class="dropdown-item" href="#">Phòng bếp</a></li>
                        </ul>
                    </li> *@
                    <li class="nav-item">
                        <a class="nav-link" href="#">Góc cảm hứng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Hướng dẫn</a>
                    </li>
                </ul>
            </nav>

            <!-- Search and Icons Section -->
            <div class="d-flex align-items-center">
                <div class="search-bar">
                    <input type="text" class="form-control" placeholder="Tìm kiếm...">
                    <a href="@Url.Action("SearchAjax", "SanPham")"><button class="btn btn-outline-secondary"><i class="fas fa-search"></i></button></a>
                </div>
                <div class="icons">
                    <i class="fas fa-user dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"></i>
                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                        @if (User.Identity.IsAuthenticated) // Kiểm tra xem người dùng đã đăng nhập chưa
                        {
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">@User.Identity.Name</a></li> <!-- Tên người dùng -->
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Thoát</a></li>
                        }
                        else
                        {
                            <li><a class="dropdown-item" href="@Url.Action("Login", "Account")">Đăng nhập</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Register", "Account")">Đăng ký</a></li>
                        }
                    </ul>
                    <a href="@Url.Action("index", "Cart")"><i class="fas fa-shopping-cart"></i></a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content Section -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Footer Section -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3 footer-logo">
                    <h5>EGA Furniture</h5>
                    <p>Siêu thị nội thất EGA</p>
                    <p>Thương hiệu nội thất uy tín và chất lượng, cam kết mang đến những trải nghiệm mua sắm tiện lợi, hiện đại và phong phú</p>
                    <p>Mã số thuế: 12345678999</p>
                    <p>Địa chỉ: 70 Lu Gia, District 11, Ho Chi Minh City</p>
                    <p>Số điện thoại: 19006750</p>
                    <p>Email: support@sapo.vn</p>
                    <p>© Bản quyền thuộc về EGANY | Cung cấp bởi Sapo</p>
                </div>
                <div class="col-md-3 footer-support">
                    <h5>HỖ TRỢ KHÁCH HÀNG</h5>
                    <p><a href="#">Giới thiệu</a></p>
                    <p><a href="#">Thông tin liên hệ</a></p>
                    <p><a href="#">Tra cứu cửa hàng</a></p>
                    <p><a href="#">Tư vấn nội thất theo phong thủy</a></p>
                </div>
                <div class="col-md-3 footer-policy">
                    <h5>CHÍNH SÁCH</h5>
                    <p><a href="#">Điều khoản dịch vụ</a></p>
                    <p><a href="#">Chính sách bảo mật</a></p>
                    <p><a href="#">Chính sách đổi trả</a></p>
                    <p><a href="#">Chính sách giao hàng</a></p>
                    <p><a href="#">Chương trình cộng tác viên</a></p>
                </div>
                <div class="col-md-3 footer-subscribe">
                    <h5>ĐĂNG KÝ NHẬN TIN</h5>
                    <p>Bạn muốn nhận khuyến mãi đặc biệt? Đăng ký ngay.</p>
                    <input type="email" placeholder="Nhập địa chỉ email">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-warning btn-sm mt-2">Đăng ký</a>
                    <div class="social-icons mt-3">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-zalo"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                        <a href="#"><i class="fab fa-tiktok"></i></a>
                    </div>
                    <div class="payment-methods mt-3">
                            <img src="~/lib/visa.png" alt="Visa">
                            <img src="~/lib/momo.png" alt="MoMo">
                            <img src="~/lib/zalopay.png" alt="ZaloPay">
                            <img src="~/lib/cod.png" alt="COD">
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.search-bar input').on('input', function () {
                var keyword = $(this).val();

                $.ajax({
                    url: '/SanPham/SearchAjax',
                    type: 'GET',
                    data: { keyword: keyword },
                    success: function (response) {
                        $('#search-results').html(response); // Cập nhật vùng kết quả
                    },
                    error: function () {
                        console.error("Lỗi khi tải kết quả tìm kiếm.");
                    }
                });
            });
        });

    </script>
</body>
</html>
