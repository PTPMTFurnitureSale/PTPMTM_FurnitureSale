    <div class="product-grid">
    @foreach (var promotion in Model.Promotions)
    {
        @foreach (var product in Model.ProductsWithPromotions)
        {
            if (product.KhuyenMais != null && product.KhuyenMais.Any(km => km.IdKhuyenMai == promotion.IdKhuyenMai))
            {
                var discountPrice = product.DonGia - (product.DonGia * promotion.PhanTramKhuyenMai / 100);
